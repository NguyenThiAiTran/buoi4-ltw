<div class="container">
    <h1>Danh sách người dùng</h1>
    <% if (roleid === 1) { %>
        <a href="/usersadd" class="btn btn-primary">Thêm người dùng mới</a>
    <%} %>
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên đăng nhập</th>
                <th>Họ tên</th>
                <th>Giới tính</th>
                <th>Địa chỉ</th>
                <th>Quyền</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.userid %></td>
                    <td><%= user.username %></td>
                    <td><%= user.fullname %></td>
                    <td><%= user.sex %></td>
                    <td><%= user.address %></td> 
                    <td><%= user.role %></td> 
                    <td>
                        <a href="/users/<%= user.userid %>" class="btn btn-info">Xem</a>
                        <a href="/users/edit/<%= user.userid %>" class="btn btn-warning">Sửa</a>
                        <a href="/users/delete/<%= user.userid %>" class="btn btn-danger">Xóa</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<link rel="stylesheet" href="/styles/style.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>