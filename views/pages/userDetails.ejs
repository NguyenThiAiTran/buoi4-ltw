<style>
        .custom-card-header {
            background-color: #6f42c1;
            color: white;
        }
        .btn-primary {
            background-color: #28a745; 
            border-color: #28a745;
        }
        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }
    </style>
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Chi tiết người dùng</h1>
        <div class="card shadow">
            <div class="card-header custom-card-header">
                <h5 class="mb-0">Thông tin cá nhân</h5>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item"><strong>Tên đăng nhập:</strong> <%= user.username %></li>
                    <li class="list-group-item"><strong>Họ tên:</strong> <%= user.fullname %></li>
                    <li class="list-group-item"><strong>Địa chỉ:</strong> <%= user.address %></li>
                    <li class="list-group-item"><strong>Giới tính:</strong> <%= user.sex %></li>
                    <li class="list-group-item"><strong>Email:</strong> <%= user.email %></li>
                </ul>
            </div>
            <div class="card-footer text-end">
                <a href="/users" class="btn btn-primary"><i class="fas fa-arrow-left"></i> Quay lại danh sách</a>
                <a href="/users/edit/<%= user.id %>" class="btn btn-warning"><i class="fas fa-edit"></i> Sửa</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>